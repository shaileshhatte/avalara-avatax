{
    "name": "avalara-avatax",
    "displayName": "Avalara AvaTax",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.49.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:api-endpoints",
        "onView:definition-models",
        "onCommand:endpoint.launch",
        "onCommand:taxendpoint.launch",
        "onCommand:addressendpoint.launch",
        "onCommand:avatax.setup"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "avatax.setup",
                "title": "Setup AvaTax Credentials",
                "category": "Avalara"
            },
            {
                "command": "endpoint.launch",
                "title": "Launch API Request",
                "category": "Avalara"
            },
            {
                "command": "taxendpoint.launch",
                "title": "Tax Calculation (CreateTransaction)",
                "category": "Avalara"
            },
            {
                "command": "addressendpoint.launch",
                "title": "Address Validation (ResolvePost)",
                "category": "Avalara"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "avatax-api-explorer",
                    "title": "Avalara AvaTax",
                    "icon": "static/images/avalara.svg"
                }
            ]
        },
        "views": {
            "avatax-api-explorer": [
                {
                    "id": "api-endpoints",
                    "name": "API Endpoints"
                },
                {
                    "id": "definition-models",
                    "name": "Models"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "avatax-api-explorer",
                "contents": "No endpoint found, or Swagger.json not loaded properly."
            }
        ],
        "customEditors": [
            {
                "viewType": "endpoint.request",
                "displayName": "Request",
                "priority": "default",
                "selector": []
            },
            {
                "viewType": "endpoint.model",
                "displayName": "Model",
                "priority": "default",
                "selector": []
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Avalara",
            "properties": {
                "avalara.avataxaccountnumber": {
                    "type": "string",
                    "default": "",
                    "scope": "application",
                    "description": "Avalara Account ID or User Name (DO NOT MODIFY)"
                },
                "avalara.requesttimeout": {
                    "type": "number",
                    "default": 0,
                    "scope": "application",
                    "description": "Specifies the number of milliseconds before the request times out. Default is '0' (No timeout)."
                },
                "avalara.environment": {
                    "default": "Sandbox",
                    "scope": "application",
                    "description": "Specifies the type of AvaTax API environment.",
                    "type": "string",
                    "enum": [
                        "Sandbox",
                        "Production"
                    ],
                    "enumDescriptions": [
                        "https://sandbox-rest.avatax.com/",
                        "https://rest.avatax.com/"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/vscode": "^1.48.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "httpsnippet": "^1.22.0",
        "js-base64": "^3.4.5",
        "json-beautify": "^1.1.1",
        "keytar": "^6.0.1",
        "pretty-print-json": "^0.2.2",
        "xml-formatter": "^2.1.3"
    }
}
